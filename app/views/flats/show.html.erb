<div class="details">
    <div class="card1">
      <h3><%= @flat.name %></h3>
      <p><%= @flat.address %></p>
  </div>
  <div class="card2">
      <h5>A bit more details</h5>
      <p><%= @flat.description %></p>
  </div>
<div class="cardright">
  <p><%= @flat.number_of_guests%> <i class="fas fa-user-friends"></i></p>
      <p><%= @flat.price_per_night%> <i class="fas fa-euro-sign"></i></p>
</div>

<p><%= link_to 'Edit', edit_flat_path(@flat) %></p>
<p><%= link_to 'Destroy', flat_path(@flat), method: :delete, data: { confirm: 'Are you sure?' } %></p>

</div>
